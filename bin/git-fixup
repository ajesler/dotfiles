# Select a commit to fixup
# Use this after you've staged the diff you want to patch a commit with

# Store the commit from fzf from fzf
commit=($(git log --format=olpc --decorate --date=relative --max-count 200 | fzf --ansi --preview 'git show --color=always {1}'))

# If no commit passed (e.g. if Esc pressed), return to terminal
if [ -z "${commit}" ]; then
    exit 1
fi

git commit --fixup ${commit}
